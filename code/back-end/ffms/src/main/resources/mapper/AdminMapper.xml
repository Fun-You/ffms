<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.csu.ffms.persistence.AdminMapper">
    <select id="getAdminByAdminid" parameterType="string" resultType="Admin">
    SELECT
          ADMINID,
          ADMINPSAAWORD
    FROM ADMIN
    WHERE ADMIN.ADMINID = #{adminid}
    </select>

    <select id="getAdminByAdminidAndPassword" parameterType="Admin" resultType="Admin">
    SELECT
          ADMINID,
          ADMINPSAAWORD
    FROM ADMIN
    WHERE ADMINID = #{adminid}
      AND PSAAWORD = #{password}
    </select>

    <insert id="insertAdmin" parameterType="Admin">
    INSERT INTO ADMIN
      (ADMINID, PSAAWORD)
    VALUES
      (#{adminid}, #{password})
  </insert>

    <update id="updateAdmin" parameterType="Admin">
    UPDATE ACCOUNT SET
          ADMINID =  #{adminid},
          PSAAWORD =  #{password}
    WHERE ADMINID = #{adminid}
    </update>

    <delete id="deleteAdmin" parameterType="String">
    DELETE FROM ADMIN
    WHERE ADMINID = #{adminid}
  </delete>

    <select id="getAllAdmin" resultType="Admin">
      SELECT
          ADMINID,
          PSAAWORD
    FROM ADMIN
    </select>


</mapper>