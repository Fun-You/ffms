<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.csu.ffms.persistence.AccountAssertMapper">
    <insert id="insertAssert" parameterType="AccountAssert">
        insert into assert(userid,time,cash,stock,fund)
        values(#{userid},#{time},#{cash},#{stock},#{fund})
    </insert>

    <select id="getAssertByUserid" parameterType="String" resultType="AccountAssert">
        select
            userid,
            time,
            cash,
            stock,
            fund
        from assert
        where userid=#{value}
    </select>

    <select id="getLastAssertByUserid" parameterType="String" resultType="AccountAssert">
         select
                userid,
                time,
                cash,
                stock,
                fund
        from assert
        where userid=#{value}
        Order By time Desc
        limit 0,1
    </select>

</mapper>